<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/bkg_catering" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/textRestaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="150dp"
            android:text="Restaurant"
            android:textColor="@color/cardview_light_background"
            android:textSize="30sp"
            android:typeface="sans"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textDenumire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="TextView"
            android:textColor="@color/cardview_light_background"
            android:textSize="45sp"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textRestaurant" />

        <TextView
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/border_white"
            android:elevation="1dp"
            android:padding="20dp"
            android:text="Afiseaza Meniu Catering"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/whitetransparent"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"></LinearLayout>

        <ImageButton
            android:id="@+id/istoric"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/istoric"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="@+id/linearLayout2"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/linearLayout2"
            android:layout_marginTop="12dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/linearLayout2"
            app:layout_constraintHorizontal_bias="0.0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Istoric comenzi"
            android:textSize="10sp"
            app:layout_constraintTop_toBottomOf="@+id/istoric"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/linearLayout2"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/linearLayout2"
            app:layout_constraintHorizontal_bias="0.0" />

        <ImageButton
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/profile"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/linearLayout2"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/linearLayout2"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/linearLayout2"
            android:layout_marginTop="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="10sp"
            app:layout_constraintTop_toBottomOf="@+id/profile"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/linearLayout2"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/linearLayout2" />

        <ImageButton
            android:id="@+id/adrese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/adrese"
            android:layout_marginRight="26dp"
            app:layout_constraintRight_toRightOf="@+id/linearLayout2"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@+id/linearLayout2"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/linearLayout2"
            app:layout_constraintHorizontal_bias="1.0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adresele mele"
            android:textSize="10sp"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/adrese"
            app:layout_constraintRight_toRightOf="@+id/linearLayout2"

            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/linearLayout2"
            app:layout_constraintHorizontal_bias="1.0" />

    </android.support.constraint.ConstraintLayout>


</FrameLayout>
